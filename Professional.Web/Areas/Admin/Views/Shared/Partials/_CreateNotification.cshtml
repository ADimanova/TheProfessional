@using Professional.Web.Areas.Admin.Models
@model NotificationAdminModel

@using (Html.BeginForm("Create", "Notifications", FormMethod.Post,
    new { @class = "form-horizontal pop-up-edit", role = "form", id = "create-admin" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.Title, "Title", new { @class = "col-md-1 control-label" })
        <div class="col-md-12">
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control bordered" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Content, "Content", new { @class = "col-md-1 control-label" })
        <div class="col-md-12">
            @Html.TextAreaFor(m => m.Content, new { @class = "form-control bordered" })
        </div>
    </div>
}

