@using Professional.Web.Areas.Admin.Models
@model FieldAdminModel

@using (Html.BeginForm("Create", "Fields", FormMethod.Post,
    new { @class = "form-horizontal pop-up-edit", role = "form", id = "create-admin" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.Name, "Name", new { @class = "col-md-1 control-label" })
        <div class="col-md-12">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control bordered" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Rank, "Rank", new { @class = "col-md-1 control-label" })
        <div class="col-md-12">
            @Html.TextBoxFor(m => m.Rank, new { type = "number", @class = "form-control bordered" })
        </div>
    </div>
}

