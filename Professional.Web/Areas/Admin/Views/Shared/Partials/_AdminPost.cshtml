@using Professional.Web.Areas.Admin.Models
@model PostAdminModel

@using (Html.BeginForm("Edit", "Posts", FormMethod.Post, 
    new { @class = "form-horizontal pop-up-edit", role = "form", id = "edit-admin" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <input type="hidden" class="form-control bordered" name="id" value="@Model.ID"/>
    <div class="form-group">
        <label for="post-title" class="col-md-1 control-label">Title</label>
        <div class="col-md-12">
            <input type="text" class="form-control bordered" name="title" value="@Model.Title" />
        </div>
    </div>
    <div class="form-group">
        <label for="post-content" class="col-md-1 control-label">Content</label>
        <div class="col-md-12">
            <textarea class="form-control bordered" name="content">@Model.Content</textarea>
        </div>
    </div>
}

