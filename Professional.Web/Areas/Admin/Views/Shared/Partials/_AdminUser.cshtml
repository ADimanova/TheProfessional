@using Professional.Web.Areas.Admin.Models
@model UserDetailedAdminModel

@using (Html.BeginForm("Edit", "Users", FormMethod.Post,
    new { @class = "form-horizontal pop-up-edit", role = "form", id = "edit-admin" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <input type="hidden" class="form-control bordered" name="id" value="@Model.Id" />
    <div class="form-group">
        <label for="username" class="control-label label-user-edit">Userame</label>
        <div class="col-md-12">
            <input type="text" class="form-control bordered" id="username" name="username" value="@Model.Username" />
        </div>
    </div>
    <div class="form-group">
        <label for="email" class="control-label label-user-edit">E-mail</label>
        <div class="col-md-12">
            <input type="text" class="form-control bordered" id="email" name="email" value="@Model.Email" />
        </div>
    </div>
    <div class="form-group">
        <label for="post-firstName" class="control-label label-user-edit">First Name</label>
        <div class="col-md-12">
            <input type="text" class="form-control bordered" id="post-firstName" name="firstName" value="@Model.FirstName" />
        </div>
    </div>
    <div class="form-group">
        <label for="post-lastName" class="control-label label-user-edit">Last Name</label>
        <div class="col-md-12">
            <input type="text" class="form-control bordered" id="post-lastName" name="lastName" value="@Model.LastName" />
        </div>
    </div>
}

