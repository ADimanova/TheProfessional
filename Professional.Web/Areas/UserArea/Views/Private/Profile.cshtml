@model PrivateProfileViewModel

@{
    ViewBag.Title = "Profile";
}

<div class="row">
    <div class="col-md-6 col-md-offset-1">
        <div class="panel panel-default">
            <div class="panel-heading">Personal Information</div>
            <div class="panel-body">
                <div class="media holder">
                    <a class="media-left" href="#">
                        <img src="~/Images/default-profile-pic.png" alt="News Image" style="width: 15em; height: auto;" />
                    </a>
                    <div class="media-body">
                        <h5 class="media-heading">@Model.UserInfo.FullName</h5>
                        @Model.UserInfo.GetPersonalHistory()
                        <a href="#" class="btn btn-default set-bottom-right">Edit</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="panel panel-default">
            <div class="panel-heading">Professional Information</div>
            <div class="panel-body">
                <h5 class="media-heading">Field</h5>
                More info...
                <a href="#" class="btn btn-default pull-right">Edit</a>
            </div>
        </div>

        @*<div class="panel panel-default">
            <div class="panel-heading">User Endorsements</div>
            <div class="panel-body">
                <h5 class="media-heading">Field</h5>
                More info...
            </div>
        </div>*@
    </div>
    <div class="col-md-5">
        <div class="col-md-6">
            @Html.Partial("~/Views/Shared/Partials/_HorizontalNavBar.cshtml", Model.NavigationList)
        </div>
    </div>
</div>



