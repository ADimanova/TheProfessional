@using Professional.Web.Models
@model IEnumerable<UserSimpleViewModel>
@{
    ViewBag.Title = "Index";
}

<div id="usersDb">
    @(Html.Kendo().Grid<UserSimpleViewModel>(Model)
    .Name("grid-users")
    .Columns(columns =>
    {
        columns.Bound(u => u.FullName);
        columns.Bound(u => u.Description);
    })
    .Scrollable()
    .Groupable()
    .Sortable()
    .Pageable(pageable => pageable
        .Refresh(true)
        .PageSizes(true)
        .ButtonCount(5))
    .DataSource(data =>
        {
            data
                .Ajax()
                .Read("Read_Users", "UsersAdmin");
        }
    )
)
</div>

<style scoped>
    #usersDb {
        width: 952px;
        height: 396px;
        margin: 20px auto 0;
        padding: 51px 4px 0 4px;
    }
</style>
