@using Professional.Web.Models.Field

@using Professional.Web.Helpers
@{
    ViewBag.Title = "Field Information";
}

@model FieldViewModel

<div class="row clearfix">
    <div class="col-md-2"></div>
    <div class="col-md-8 column grayed unedged">
        <div class="page-header">
            <h1 class="lessened wrapped">
                @Model.Name
            </h1>
        </div>
        <p class="medium-text">
            <b>Rank Points: </b> @Model.Rank
        </p>
        <p>
            <b>Field Information: </b> @Model.FieldInfo
        </p>
        <p>
            <b>Field's high achievers:</b>
            <div class="list-group">
                @if (Model.Featured.Count == 0)
                {
                    <a class="list-group-item wrapped">No one yet.</a>
                }
                else
                {
                    foreach (var holder in Model.Featured)
                    {
                        <a class="list-group-item wrapped" href="holder.Url">@holder.Content</a>
                    }
                }
            </div>
        </p>
    </div>
    <div class="col-md-2"></div>
</div>


