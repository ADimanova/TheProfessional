﻿@model DateTime?

@{
    DateTime dt = DateTime.Now;

    if (Model != null)
    {

        dt = (System.DateTime)Model;
    }

    @Html.TextBox(String.Empty, String.Format("{0:d}", dt.ToShortDateString()),
                        new { @class = "form-control datecontrol", type = "date", min = "1920-01-01", max = "1920-01-01" })
}